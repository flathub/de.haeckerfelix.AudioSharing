{
    "app-id": "de.haeckerfelix.AudioSharing",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "audio-sharing",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [
        {
            "name": "gst-rtsp-server",
            "buildsystem": "meson",
            "subdir": "subprojects/gst-rtsp-server",
            "sources": [
                {
                    "type": "git",
                    "disable-submodules": true,
                    "url": "https://gitlab.freedesktop.org/gstreamer/gstreamer.git",
                    "tag": "1.22.11"
                }
            ]
        },
        {
            "name": "audio-sharing",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/AudioSharing/uploads/b0920bf828a3cc5e2869445bc5a7f445/audio-sharing-0.2.3.tar.xz",
                    "sha256" : "7074221498e66024f3837b2b8df095e4d926661424234628ececc499d882dac3"
                }
            ]
        }
    ]
}
